<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ApMan</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <link rel="stylesheet" href="~/Content/Styles/LayoutStyle.css" type="text/css" />
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navigationStyle">
        <div class="container">
            @Html.ActionLink("Apartment Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand titleNavigation" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Users", "Index", "Users", new { area = "" }, new { @class = "nav-link navigationLink" })</li>
                    <li>@Html.ActionLink("Apartments", "Index", "Apartment", new { area = "" }, new { @class = "nav-link navigationLink" })</li>
                    <li>@Html.ActionLink("Reservations", "Index", "Reservation", new { area = "" }, new { @class = "nav-link navigationLink" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Apartment Manager in ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
