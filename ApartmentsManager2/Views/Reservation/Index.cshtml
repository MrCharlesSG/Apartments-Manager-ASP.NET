@model IEnumerable<ApartmentsManager2.Reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Reservations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId_User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApartmentId_Aparment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End_Date)
        </th>
        <th></th>
    </tr>

