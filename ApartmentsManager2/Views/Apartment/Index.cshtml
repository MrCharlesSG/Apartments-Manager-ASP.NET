@model IEnumerable<ApartmentsManager2.Apartment>

@{
    ViewBag.Title = "Index";
}

<head>
    <link href="~/Content/Styles/style.css" rel="stylesheet" />
</head>

<div class="title-button">
    <h2 style="display: inline-block;">Apartments</h2>

    <a class="createButton" onclick="location.href='@Url.Action("Create")';">Create New</a>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="trClass" onclick="location.href='@Url.Action("Details", new { id = item.Id_Aparment })';">
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserInfo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_Aparment }, new { @class = "edit-button" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_Aparment }, new { @class = "delete-button" })
            </td>
        </tr>
    }

</table>
